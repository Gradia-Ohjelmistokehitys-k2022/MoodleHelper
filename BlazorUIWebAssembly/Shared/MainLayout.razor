@code {
    private string site = "/";
    private Sidebar sidebar = default!;
    private IEnumerable<NavItem> navItems = default!;

    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();

        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new NavItem { Id = "1", Href = "/MoodleHelper", IconName = IconName.HouseDoor, Text = "Etusivu", Match=NavLinkMatch.All},
            new NavItem { Id = "2", Href = "/MoodleHelper/ShortAnswer", IconName = IconName.JournalText, Text = "Avoin vastaus"},
			new NavItem { Id = "3", Href = "/MoodleHelper/Numerical", IconName = IconName.Calculator, Text = "Numeerinen"},
			new NavItem { Id = "4", Href = "/MoodleHelper/MultiChoice", IconName = IconName.ListUl, Text = "Monivalinta"},

        };

        return navItems;
    }
}
